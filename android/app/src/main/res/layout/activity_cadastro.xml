<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lovesoft.cityclash.Cadastro">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtEmail"
        android:hint="e-mail"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edtSenha1"
        android:layout_alignStart="@+id/edtSenha1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtApelido"
        android:hint="apelido"
        android:layout_below="@+id/edtEmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtSenha1"
        android:hint="senha"
        android:layout_below="@+id/edtApelido"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtSenha2"
        android:hint="confirme sua senha"
        android:layout_below="@+id/edtSenha1"
        android:layout_alignLeft="@+id/edtSenha1"
        android:layout_alignStart="@+id/edtSenha1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cadastrar"
        android:id="@+id/btnCadastrar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp" />

</RelativeLayout>
