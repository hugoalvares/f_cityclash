<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtNome"
        android:layout_x="85dp"
        android:layout_y="112dp"
        android:hint="Nome investimento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cadastrar investimento"
        android:id="@+id/textView5"
        android:layout_x="92dp"
        android:layout_y="15dp" />

    <EditText
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtPreco"
        android:layout_x="87dp"
        android:layout_y="164dp"
        android:hint="Preço investimento" />

    <EditText
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtTempoConstrucao"
        android:layout_x="92dp"
        android:layout_y="226dp"
        android:hint="Tempo construção" />

    <EditText
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtManutencao"
        android:layout_x="89dp"
        android:layout_y="290dp"
        android:hint="Manutenção" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btnSalvar"
        android:layout_x="125dp"
        android:layout_y="362dp" />
</AbsoluteLayout>